#FROM osgeo/gdal:ubuntu-small-latest
FROM adieyal/wazimap:latest

RUN apt-get update && apt-get install -y \
  postgresql-client vim less curl apt-transport-https


ENV PYTHONUNBUFFERED 1

RUN apt-get install -y python3-pip libpq-dev

RUN mkdir -p /app
COPY requirements.txt /app/requirements.txt
COPY scripts/django/startup.sh /scripts/django/startup.sh

RUN pip3 install -r /app/requirements.txt

WORKDIR /app
RUN apt-get install -y git

CMD /scripts/django/startup.sh